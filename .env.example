# Momentum Engine Environment Variables
# Copy this to .env and fill in your values

# ===================
# Application
# ===================
APP_NAME=momentum-engine
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
API_VERSION=v1

# ===================
# PostgreSQL Database
# ===================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=momentum
POSTGRES_PASSWORD=momentum_password
POSTGRES_DB=momentum_engine
DATABASE_URL=postgresql+asyncpg://momentum:momentum_password@localhost:5432/momentum_engine

# ===================
# Redis
# ===================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# ===================
# AI Configuration
# ===================
# Anthropic (Claude) - Primary
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI (Fallback)
OPENAI_API_KEY=your-openai-api-key

# AI Cost Control
AI_MONTHLY_BUDGET_PER_USER=0.50
AI_TIER3_WEEKLY_LIMIT=4
AI_RATE_LIMIT_PER_MINUTE=50

# ===================
# Feature Flags
# ===================
FEATURE_LAIMS_ENABLED=true
FEATURE_COHORTS_ENABLED=true
FEATURE_AI_TIER3_ENABLED=true

# ===================
# Performance
# ===================
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10
REDIS_CONNECTION_TIMEOUT_MS=200
API_REQUEST_TIMEOUT_MS=30000

# ===================
# Monitoring
# ===================
LOG_LEVEL=INFO
ENABLE_METRICS=true
SLOW_QUERY_THRESHOLD_MS=1000
